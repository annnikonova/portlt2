<?xml version="1.0"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost/booksdb?useUnicode=true&amp;characterEncoding=UTF-8</property>
        <property name="hibernate.connection.username">user</property>
        <property name="hibernate.connection.password">1234</property>
        <property name="current_session_context_class">thread</property>
        <mapping class="com.aimprosoft.task5.model.Department"/>
        <mapping class="com.aimprosoft.task5.model.Employee"/>
    </session-factory>
</hibernate-configuration>